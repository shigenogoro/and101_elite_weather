<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/forecast_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/transparent">

    <!-- Forecast Header -->
    <TextView
        android:id="@+id/forecast_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forecast_title"
        android:textColor="@color/text_primary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" />

    <!-- Day 1 Forecast -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/forecast_day1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/day1_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/forecast_today_title"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <!-- Bubble and icon container -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/day1_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginEnd="8dp"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:background="@drawable/bubble_background"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:visibility="gone"
                    android:elevation="4dp"/>

                <ImageView
                    android:id="@+id/day1_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginStart="40dp"
                    android:contentDescription="@string/weather_icon" />
            </FrameLayout>

            <TextView
                android:id="@+id/day1_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_primary"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>
    </FrameLayout>

    <!-- Day 2 Forecast -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/forecast_day2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/day2_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/forecast_today_title"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <!-- Bubble and icon container -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/day2_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginEnd="8dp"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:background="@drawable/bubble_background"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:visibility="gone"
                    android:elevation="4dp"/>

                <ImageView
                    android:id="@+id/day2_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginStart="40dp"
                    android:contentDescription="@string/weather_icon" />
            </FrameLayout>

            <TextView
                android:id="@+id/day2_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_primary"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>
    </FrameLayout>

    <!-- Day 3 Forecast -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:id="@+id/forecast_day3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/card_background"
            android:padding="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/day3_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/forecast_today_title"
                android:textColor="@color/text_primary"
                android:textSize="18sp" />

            <!-- Bubble and icon container -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/day3_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginEnd="8dp"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:text=""
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:background="@drawable/bubble_background"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:visibility="gone"
                    android:elevation="4dp"/>

                <ImageView
                    android:id="@+id/day3_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginStart="40dp"
                    android:contentDescription="@string/weather_icon" />
            </FrameLayout>

            <TextView
                android:id="@+id/day3_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_primary"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
